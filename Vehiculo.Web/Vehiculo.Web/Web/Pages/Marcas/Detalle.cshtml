@page
@model Web.Pages.Marcas.DetalleModel
@{
}
<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Detalle de Marca</h2>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-bookmark-star-fill"></i> @Html.DisplayFor(m => Model.marca.Nombre)</h5>
                        <div class="mt-3">
                            <a type="button" class="btn btn-warning" asp-page="./Editar" asp-route-id="@Model.marca.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a type="button" class="btn btn-secondary" asp-page="./Index"><i class="bi bi-info-square"></i> Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>