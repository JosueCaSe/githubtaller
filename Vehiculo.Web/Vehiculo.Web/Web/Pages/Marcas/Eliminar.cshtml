@page
@model Web.Pages.Marcas.EliminarModel
@{
}
<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Eliminar Marca</h2>
      
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <form method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-bookmark-star-fill"></i> @Html.DisplayFor(m => Model.marca.Nombre)</h5>
                        <div class="mt-3">
                            <a type="button" class="btn btn-secondary" asp-page="./Index"><i class="bi bi-info-square"></i> Regresar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                            <div class="text-danger my-2" asp-validation-summary="All"></div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>