@page
@model Web.Pages.Marcas.AgregarModel
@{
}
<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Agregar Marca</h2>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <form method="post">
                   <div class="form-group my-4">
                       <label class="control-label mb-1" asp-for="marca.Nombre"></label>
                       <input class="form-control mb-1" asp-for="marca.Nombre"/>
                       <span class="text-danger" asp-validation-for="marca.Nombre"></span>
                   </div
                   <div class="form-group my-4">
                       <a class="btn btn-secondary" asp-page="./Index">Regresar</a>
                       <button type="submit" class="btn btn-success">Agregar</button>
                   </div>
                </form>
            </div>
        </div>
    </div>
</section>